{
  "name": "Faiz Chrome Tools",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Various modifications for my own use",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "src/bg/background.js"
    ],
    "persistent": true
  },
  "page_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "Faiz Chrome Tools"
  },
  "permissions": [
    "https://github.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://github.com/*",
        "https://my.sa.ucsb.edu/gold/ResultsFindCourses.aspx"
      ],
      "js": [
        "src/inject/github.js",
        "src/inject/gold.js"
      ]
    }
  ]
}